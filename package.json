{
  "name": "spimar-expo",
  "version": "1.0.0",
  "author": "Arbaoui Mehdi <arbaoui.mehdi@gmail.com>",
  "homepage": "https://www.spimarexpo.com",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Clarkom/spimar-expo.git"
  },
  "bugs": {
    "url": "https://github.com/Clarkom/spimar-expo/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://opensource.org/licenses/MIT"
    }
  ],
  "browserslist": [
    "last 2 versions",
    "android 4",
    "opera 12"
  ],
  "eslintConfig": {
    "root": true,
    "extends": "eslint:recommended",
    "globals": {
      "wp": true
    },
    "env": {
      "node": true,
      "es6": true,
      "amd": true,
      "browser": true,
      "jquery": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "globalReturn": true,
        "generators": false,
        "objectLiteralDuplicateProperties": false,
        "experimentalObjectRestSpread": true
      },
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "plugins": [
      "import"
    ],
    "settings": {
      "import/core-modules": [],
      "import/ignore": [
        "node_modules",
        "\\.(coffee|scss|css|less|hbs|svg|json)$"
      ]
    },
    "rules": {
      "comma-dangle": [
        "error",
        {
          "arrays": "always-multiline",
          "objects": "always-multiline",
          "imports": "always-multiline",
          "exports": "always-multiline",
          "functions": "ignore"
        }
      ]
    }
  },
  "engines": {
    "node": ">= 6.9.4",
    "npm": "^5.4.2"
  },
  "scripts": {
    "start": "docker-compose up web",
    "test": "docker-compose run ci",
    "shell": "docker-compose run shell",
    "lint": "vendor/wpcs/vendor/bin/phpcs --extensions=php --standard=./phpcs.xml -n -p .",
    "build": "webpack --progress --config htdocs/wordpress/wp-content/themes/spimar-expo-theme/resources/assets/build/webpack.config.js",
    "build:production": "webpack --progress -p --config htdocs/wordpress/wp-content/themes/spimar-expo-theme/resources/assets/build/webpack.config.js",
    "start_webpack": "webpack --hide-modules --watch --config htdocs/wordpress/wp-content/themes/spimar-expo-theme/resources/assets/build/webpack.config.js"
  },
  "devDependencies": {
    "autoprefixer": "~7.1",
    "browser-sync": "~2.18",
    "browsersync-webpack-plugin": "^0.6.0",
    "bs-html-injector": "~3.0",
    "buble-loader": "^0.4.1",
    "cache-loader": "~1.1.0",
    "clean-webpack-plugin": "^0.1.16",
    "copy-globs-webpack-plugin": "^0.2.0",
    "css-loader": "^0.28.4",
    "cssnano": "~v4.0.0-rc.2",
    "eslint": "~4.9.0",
    "eslint-loader": "~1.9",
    "eslint-plugin-import": "~2.8.0",
    "extract-text-webpack-plugin": "~3.0",
    "file-loader": "^1.1.5",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "imagemin-mozjpeg": "~6.0",
    "imagemin-webpack-plugin": "~1.5.0-beta.0",
    "import-glob": "~1.5",
    "node-sass": "~4.5",
    "postcss-loader": "~2.0",
    "postcss-safe-parser": "~3.0",
    "resolve-url-loader": "~2.1",
    "rimraf": "~2.6",
    "sass-loader": "~6.0",
    "style-loader": "^0.19.0",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "~17.0.0",
    "stylelint-webpack-plugin": "^0.9.0",
    "url-loader": "^0.6.2",
    "webpack": "~3.8.1",
    "webpack-assets-manifest": "^1.0.0",
    "webpack-dev-middleware": "~1.12.0",
    "webpack-hot-middleware": "~2.20.0",
    "webpack-merge": "~4.1",
    "yargs": "~9.0.1"
  },
  "dependencies": {
    "bootstrap": "v4.0.0-beta.2",
    "jquery": "1.12.4 - 3",
    "popper.js": "^1.12.3"
  }
}
